<%- include("partials/header") -%>

    <section id="home-body" class="main">

        <div class="container-fluid main-box">
            <h1>Home</h1>
            <p><%= homeContent %></p>
        </div>

        <% allPosts.forEach( (post) => { %>
        <div class="container-fluid main-box">
            <h2><%= post.title%></h2>
            <p> 
                <%= `${post.post.substring(0, 100)} ...`%> 
                <a href="/posts/<%=post._id%>">Read More</a> 
            </p> 
        </div>

        <% }); %>

    </section>

<%- include("partials/footer") -%>